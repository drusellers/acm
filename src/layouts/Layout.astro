---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import '@fontsource-variable/outfit';
import '@fontsource-variable/open-sans'
---
<!-- Provides a column to hold the content inside of a fixed window -->
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>A Curious Mind</title>
		<meta name="author" content="Dru Sellers" />
		<meta name="description" content="How can I help you solve technical problems today?" />

		<meta property="og:title" content="A Curious Mind" />
		<meta property="og:description" content="How can I help you solve technical problems today?" />
		<meta property="og:image" content="https://acuriousmind.com/009.jpg" />
	</head>
	<body class="bg-brite-50 dark:bg-dim-950 relative">

		<!-- neat -->
		<div class="container mx-auto h-full px-4">
			<!-- start the stack -->
			<div class="flex flex-col justify-between h-full">
				<div class="flex flex-col gap-y-8 mt-4">
					<Header />
					<slot />
				</div>
				<Footer />
			</div>
		</div>
	</body>
</html>

<style is:global>
	/* get the bounding box to be full screen in size */
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	h1,h2,h3,h4,h5 {
		font-family: 'Outfit Variable', sans-serif;
	}
</style>
